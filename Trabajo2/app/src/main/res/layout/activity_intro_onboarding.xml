<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="10dp"
    android:background="@drawable/degradado_purple"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    >

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-80dp"
        android:background="@drawable/plantilla_circulo"
        android:elevation="2dp"
        android:gravity="center">

        <ImageView
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:src="@drawable/img_lobito"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageOnboarding"
        android:layout_width="261dp"
        android:layout_height="272dp"
        android:layout_margin="20dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/textTitle3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="-13dp"
        android:layout_marginEnd="-100dp"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:visibility="invisible"
        android:id="@+id/textTitle4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:layout_marginBottom="30dp"
        android:textColor="#800080"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textTitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-70dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:textColor="#800080"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="-15dp"
        android:layout_marginStart="-15dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textTitle5"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-38dp"
        android:gravity="center_horizontal"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/textTitle6"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-90dp"
        android:layout_marginEnd="65dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textTitle7"
        android:textColor="#800080"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-25dp"
        android:layout_marginEnd="-50dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textTitle8"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-25dp"
        android:layout_marginEnd="-109dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textTitle9"
        android:layout_width="289dp"
        android:layout_height="30dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="-5dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="18sp"/>

</LinearLayout>